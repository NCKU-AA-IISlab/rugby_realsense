#include "ros/ros.h"
#include "sensor_msgs/PointCloud2.h"
#include <iostream>

class PCD_Valid
{
  public:
    PCD_Valid();

  private:
    ros::NodeHandle nh_;                          
    ros::Subscriber pcd_sub;			     
    ros::Publisher pcd_pub;                   
    
    void pcd_callback(const sensor_msgs::PointCloud2& pcd_origin);
};


PCD_Valid::PCD_Valid()
{
  pcd_sub = nh_.subscribe("/points_valid", 1, &PCD_Valid::pcd_callback, this);
  pcd_pub = nh_.advertise<sensor_msgs::LaserScan>("/points_valid",10, true);
}


void PCD_Valid::pcd_callback(const sensor_msgs::PointCloud2& pcd_origin)
{
  sensor_msgs::LaserScan scan_bound;
  
  // Publish the result
  scan_bound.ranges.resize(count);
  scan_bound.intensities.resize(count);
  scan_pub.publish(scan_bound);
}


//------------Main function-----------------
int main(int argc, char **argv)
{
  ros::init(argc, argv, "PointCloud_setValid");
  ROS_INFO("=== PointCloud_setValid Start ===");  
  PCD_Valid pcd_Valid;

  while( ros::ok() )
    ros::spin();

  return EXIT_SUCCESS;
}
