<?xml version="1.0"?>

<launch>
	<!-- Parameters -->
	<arg name="depth_registered_camera_info"   default="/depth_registered/camera_info"/>
	<arg name="depth_registered_image_rect"      default="/depth_registered/image_rect_raw"/>
	<arg name="scan_frame" default="camera_link"/>
	<arg name="scan_topic" default="/fake_scan/scan_final"/>

	<!-- Depth to laserscan (depth->pd->filter->laser) -->
	<!-- nodelet manager -->
	<node pkg="nodelet" type="nodelet" name="depth_manager" args="manager" output="screen" />

	<!-- Depth to pointcloud -->
	<node pkg="nodelet" type="nodelet" name="point_cloud_xyz" args="load depth_image_proc/point_cloud_xyz depth_manager" output="screen">
		<remap from="camera_info" to="$(arg depth_registered_camera_info)" /> 
		<remap from="image_rect" to="$(arg depth_registered_image_rect)" />
		<remap from="points" to="/fake_scan/depth2points" />
	</node>
	
	<!-- Pointcloud to laserscan --> 
	<!-- for local costmap, under nodelet "pcl_manager" created above--> 
	<node pkg="nodelet" type="nodelet" name="pointcloud_to_laserscan" args="load pointcloud_to_laserscan/pointcloud_to_laserscan_nodelet depth_manager" output="screen">
		<!-- node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan" name="pointcloud_to_laserscan" -->
		<remap from="cloud_in" to="/fake_scan/depth2points"/>
		<remap from="scan" to="/fake_scan/scan_middle"/>
		<param name="min_height" value="-0.3" /> 
		<param name="max_height" value="0.1" /> 
		<param name="angle_min" value="-0.7" /> 
		<param name="angle_max" value="0.7" /> 
		<param name="angle_increment" value="1.4/200" />
		<param name="range_min" value="0.2" /> 
		<param name="range_max" value="10.0" /> 
		<param name="scan_time" value="1/60.0" /> 
		<param name="target_frame" value="$(arg scan_frame)" /> 
	</node>

	<!-- Pointcloud Set Valid -->
	<node pkg="nodelet" type="nodelet" name="LaserToPointCloud" args="load rugby_realsense/LaserToPointCloud depth_manager" output="screen">
		<remap from="scan" to="/fake_scan/scan_middle" /> 
		<remap from="points" to="/fake_scan/laser2points" />
	</node>

	<!-- Pointcloud Set Valid -->
	<node pkg="nodelet" type="nodelet" name="PointCloudSetValid" args="load rugby_realsense/PointCloudSetValid depth_manager" output="screen">
		<remap from="input_invalid" to="/fake_scan/laser2points" /> 
		<remap from="output_valid" to="/fake_scan/laser2points_valid" />
	</node>

	<!-- PCL pointcloud filter -->
	<node pkg="nodelet" type="nodelet" name="RadiusOutlierRemoval" args="load pcl/RadiusOutlierRemoval depth_manager" output="screen">
		<remap from="~input" to="/fake_scan/laser2points_valid" /> 
		<remap from="~output" to="/fake_scan/final_points" />
		<param name="radius_search" value="0.1" /> 
		<param name="min_neighbors" value="5" />
	</node>

	<!-- Pointcloud to laserscan --> 
	<!-- for local costmap, under nodelet "pcl_manager" created above--> 
	<node pkg="nodelet" type="nodelet" name="pointcloud_to_laserscan_second" args="load pointcloud_to_laserscan/pointcloud_to_laserscan_nodelet depth_manager" output="screen">
		<!-- node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan" name="pointcloud_to_laserscan" -->
		<remap from="cloud_in" to="/fake_scan/final_points"/>
		<remap from="scan" to="$(arg scan_topic)"/>
		<param name="min_height" value="-0.1" /> 
		<param name="max_height" value="0.1" /> 
		<param name="angle_min" value="-0.78539" /> 
		<param name="angle_max" value="0.78539" /> 
		<param name="range_min" value="0.2" /> 
		<param name="range_max" value="15.0" /> 
		<param name="scan_time" value="1/60.0" /> 
		<param name="target_frame" value="$(arg scan_frame)" /> 
	</node>
</launch>
